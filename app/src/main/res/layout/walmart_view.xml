<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wmt="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="280dp"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/product_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/walmartImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/walmartPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/price_rounded_corner"
                android:padding="2dp"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textColor="#00C853"
                android:textStyle="bold|italic"
                android:typeface="normal" />




        </RelativeLayout>





        <!-- <ImageButton
             android:id="@+id/walmartImageButton"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_centerHorizontal="true"
             android:layout_gravity="center_horizontal"
             android:adjustViewBounds="true"
             android:cropToPadding="false"
             android:padding="-5dp"
             android:scaleType="fitXY"
             app:srcCompat="@drawable/placeholder" />-->


    </android.support.v7.widget.CardView>

    <co.uglytruth.snazzswag.walmart.views.ShoppingBuyButton
        android:id="@+id/shopping_buy_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="-10dp"
        android:layout_alignBottom="@+id/product_background"



        android:layout_marginBottom="-60dp" />
